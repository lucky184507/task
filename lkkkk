    <div class="modal" id="cart-modal">
        <div class="modal-content">
            <span class="close-modal">&times;</span>
            <h2>Your Cart</h2>
            <div id="cart-items"><p>Your cart is empty</p></div>
            <div id="cart-total">Total: $0.00</div>
            <button class="btn" id="checkout-btn">Checkout</button>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded',()=>{
            const menuToggle=document.querySelector('.menu-toggle');
            const nav=document.querySelector('nav');
            menuToggle.addEventListener('click',()=>nav.classList.toggle('active'));
            
            let cart=[];
            const updateCart=()=>{
                document.querySelector('.cart-count').textContent=cart.reduce((t,i)=>t+i.quantity,0);
                const ci=document.getElementById('cart-items');
                if(cart.length===0){ci.innerHTML='<p>Your cart is empty</p>';document.getElementById('cart-total').textContent='Total: $0.00';return}
                ci.innerHTML=cart.map(i=>`<div style="display:flex;justify-content:space-between;padding:0.5rem 0;border-bottom:1px solid #eee"><div><p>${i.name}</p><small>$${i.price} x ${i.quantity}</small></div><div>$${(i.price*i.quantity).toFixed(2)} <button onclick="removeItem('${i.id}')" style="background:none;border:none;color:red;cursor:pointer">X</button></div></div>`).join('');
                document.getElementById('cart-total').textContent=`Total: $${cart.reduce((t,i)=>t+(i.price*i.quantity),0).toFixed(2)}`;
            };
            window.removeItem=id=>{cart=cart.filter(i=>i.id!==id);updateCart()};
            document.querySelectorAll('.add-to-cart').forEach(b=>b.addEventListener('click',()=>{
                const id=b.getAttribute('data-id'),name=b.getAttribute('data-name'),price=+b.getAttribute('data-price');
                const item=cart.find(i=>i.id===id);
                item?item.quantity++:cart.push({id,name,price,quantity:1});
                updateCart();
            }));
            document.querySelector('.cart-icon').addEventListener('click',()=>document.getElementById('cart-modal').style.display='flex');
            document.querySelector('.close-modal').addEventListener('click',()=>document.getElementById('cart-modal').style.display='none');
            window.addEventListener('click',e=>e.target===document.getElementById('cart-modal')&&(document.getElementById('cart-modal').style.display='none'));
            document.getElementById('checkout-btn').addEventListener('click',()=>{if(cart.length>0){alert('Order placed!');cart=[];updateCart();document.getElementById('cart-modal').style.display='none'}});
            document.getElementById('contact-form').addEventListener('submit',e=>{e.preventDefault();alert('Message sent!');e.target.reset()});
            document.querySelectorAll('a[href^="#"]').forEach(a=>a.addEventListener('click',e=>{e.preventDefault();const t=document.querySelector(a.getAttribute('href'));if(t){window.scrollTo({top:t.offsetTop-70,behavior:'smooth'});nav.classList.remove('active')}}));
        });
    </script>
